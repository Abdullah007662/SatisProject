@model SatışProject.Entities.Category
@{
    ViewData["Title"] = "Kategori Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"> Kategori Güncelleme</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CategoryId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Icon" class="form-label">İkon Sınıfı</label>
                            <input asp-for="Icon" class="form-control" placeholder="Örn: bi bi-house" />
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Durum</label>
                            <div>
                                <div class="form-check form-check-inline">

                                    <input asp-for="IsActive" class="form-check-input" type="radio" value="true" id="IsActiveTrue" />
                                    <label class="form-check-label" for="IsActiveTrue">Aktif</label>
                                </div>
                                <div class="form-check form-check-inline">

                                    <input asp-for="IsActive" class="form-check-input" type="radio" value="false" id="IsActiveFalse" />
                                    <label class="form-check-label" for="IsActiveFalse">Pasif</label>
                                </div>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Popüler Kategori mi?</label>
                            <div class="form-check form-switch">
                                <input asp-for="popularCategory" class="form-check-input" type="checkbox" role="switch" />
                                <label class="form-check-label" asp-for="popularCategory">Evet</label>
                            </div>
                            <span asp-validation-for="popularCategory" class="text-danger"></span>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-save2 me-1"></i>Güncelle
                            </button>
                            <a href="/AdminCategory/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}