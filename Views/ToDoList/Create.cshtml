@model SatışProject.Entities.ToDoItem
@{
    ViewData["Title"] = "Yeni Görev Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeId" /> @* Çalışan ID'sini gizli alan olarak gönderiyoruz *@

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label"></label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
