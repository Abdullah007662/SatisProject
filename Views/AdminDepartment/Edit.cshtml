@model Department
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="card shadow border-0 rounded-4 col-md-8 mx-auto">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-arrow-clockwise me-2"></i>Marka Güncelleme</h4>
        </div>
        <div class="card-body p-4 bg-light rounded-bottom-4">
            <form asp-action="Edit" asp-controller="AdminBrand" method="post">
                <input type="hidden" asp-for="DepartmentID" />

                <div class="mb-3">
                    <label class="form-label">Departman Adı</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Departman Açıklaması</label>
                    <input asp-for="Description" class="form-control" required />
                </div>


                <div class="mb-3">
                    <label asp-for="IsActive" class="form-label">Durum</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input asp-for="IsActive" class="form-check-input" type="radio" value="true" checked="@Model.IsActive" />
                            <label class="form-check-label" for="IsActive">Aktif</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="IsActive" class="form-check-input" type="radio" value="false" checked="!@Model.IsActive" />
                            <label class="form-check-label" for="IsActive">Pasif</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-save2 me-1"></i>Kaydet
                    </button>
                    <a href="/AdminBrand/Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-1"></i>İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

