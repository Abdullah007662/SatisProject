@model Department

@{
    ViewData["Title"] = "Departman Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-building me-2"></i>Departman Detayı</h4>
        </div>
        <div class="card-body p-4">
            <form>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label">Departman Adı</label>
                        <input class="form-control" value="@Model.Name" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Durum</label>
                        <input class="form-control" value="@(Model.IsActive ? "Aktif" : "Pasif")" readonly />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" rows="3" readonly>@Model.Description</textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Çalışan Sayısı</label>
                        <input class="form-control" value="@Model.Employees?.Count() ?? 0" readonly />
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <a href="/AdminDepartment/Edit/@Model.DepartmentID" class="btn btn-warning px-4 me-2">
                        <i class="bi bi-pencil-square me-1"></i>Düzenle
                    </a>
                    <a href="/AdminDepartment/Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
