@model SatışProject.Entities.Product
@{
    ViewData["Title"] = $"{Model.Name} - Ürün Detayı";
    Layout = null; // If you have a _Layout.cshtml file and want to use it, remove this line.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* General Style Settings */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7f6;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 15px;
        }

        /* Navbar styles copied here */
        .navbar {
            background-color: #2c3e50;
            padding: 15px 0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .navbar .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin: 0 auto;
            }

            .navbar-brand {
                color: white;
                text-decoration: none;
                font-size: 2.5em;
                font-weight: 700;
                letter-spacing: 1px;
                transition: color 0.3s ease;
            }

                .navbar-brand:hover {
                    color: #1abc9c;
                }

            .navbar-nav {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
            }

                .navbar-nav li {
                    margin-left: 30px;
                }

                    .navbar-nav li a {
                        color: white;
                        text-decoration: none;
                        font-weight: 600;
                        font-size: 1.1em;
                        transition: color 0.3s ease, transform 0.2s ease;
                        position: relative;
                    }

                        .navbar-nav li a::after {
                            content: '';
                            position: absolute;
                            width: 0;
                            height: 2px;
                            background-color: #1abc9c;
                            bottom: -5px;
                            left: 0;
                            transition: width 0.3s ease;
                        }

                        .navbar-nav li a:hover {
                            color: #1abc9c;
                            transform: translateY(-2px);
                        }

                            .navbar-nav li a:hover::after {
                                width: 100%;
                            }
        /* Common style for titles */
        h2 {
            text-align: center;
            margin-top: 40px;
            margin-bottom: 30px;
            font-size: 2.2em;
            color: #34495e;
            position: relative;
        }

            h2::after { /* Underline effect */
                content: '';
                position: absolute;
                width: 80px;
                height: 3px;
                background-color: #e74c3c;
                left: 50%;
                transform: translateX(-50%);
                bottom: -10px;
                border-radius: 2px;
            }


        /* Product Detail Page Styles */
        .product-detail-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            padding: 40px;
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
            margin-top: 50px;
        }

        .product-detail-image {
            flex: 1;
            min-width: 350px;
            max-width: 500px;
            background-color: #ecf0f1;
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

            .product-detail-image img {
                width: 100%;
                height: auto;
                max-height: 500px;
                object-fit: contain;
            }

        .product-detail-info {
            flex: 2;
            min-width: 350px;
            max-width: 600px; /* Maximum width for info section */
        }

            .product-detail-info h1 {
                font-size: 2.8em;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .product-detail-info .category-name {
                font-size: 1.1em;
                color: #1abc9c;
                font-weight: 600;
                margin-bottom: 10px;
                display: block;
            }

            .product-detail-info .product-price-detail {
                font-size: 2.5em;
                font-weight: bold;
                color: #e74c3c;
                margin-bottom: 20px;
            }

            .product-detail-info p {
                font-size: 1.1em;
                color: #555;
                margin-bottom: 25px;
            }

        .stock-info {
            font-size: 1.1em;
            font-weight: bold;
            margin-bottom: 20px;
        }

            .stock-info.in-stock {
                color: #2ecc71; /* Green */
            }

            .stock-info.out-of-stock {
                color: #e74c3c; /* Red */
            }

        .add-to-cart-detail-btn {
            background-color: #2ecc71;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.2em;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
            width: fit-content; /* Width based on content */
            margin-top: 20px;
        }

            .add-to-cart-detail-btn:hover {
                background-color: #27ae60;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
            }

        /* Footer styles copied here */
        .footer {
            background-color: #34495e;
            color: #ecf0f1;
            padding: 40px 0 20px;
            margin-top: 50px;
            font-size: 0.95em;
        }

            .footer .container {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                gap: 30px;
            }

            .footer-section {
                flex: 1;
                min-width: 250px;
                margin-bottom: 20px;
            }

                .footer-section h4 {
                    color: #1abc9c;
                    font-size: 1.3em;
                    margin-bottom: 20px;
                    border-bottom: 2px solid #1abc9c;
                    padding-bottom: 8px;
                    display: inline-block;
                }

                .footer-section ul {
                    list-style: none;
                    padding: 0;
                    margin: 0;
                }

                    .footer-section ul li {
                        margin-bottom: 10px;
                    }

                        .footer-section ul li a {
                            color: #ecf0f1;
                            text-decoration: none;
                            transition: color 0.3s ease;
                        }

                            .footer-section ul li a:hover {
                                color: #1abc9c;
                            }

                .footer-section p {
                    margin-bottom: 10px;
                }

                .footer-section .social-icons a {
                    color: #ecf0f1;
                    font-size: 1.5em;
                    margin-right: 15px;
                    transition: color 0.3s ease;
                }

                    .footer-section .social-icons a:hover {
                        color: #1abc9c;
                    }

        .footer-bottom {
            text-align: center;
            padding-top: 20px;
            margin-top: 30px;
            border-top: 1px solid #555;
            color: #ccc;
        }

        /* Responsive Settings */
        @@media (max-width: 768px) {
            .navbar .container {
                flex-direction: column;
                text-align: center;
            }

            .navbar-brand {
                margin-bottom: 15px;
            }

            .navbar-nav {
                flex-direction: column;
            }

                .navbar-nav li {
                    margin: 0 0 10px 0;
                }

            .product-detail-card {
                flex-direction: column;
                padding: 20px;
                gap: 20px;
            }

            .product-detail-image,
            .product-detail-info {
                min-width: 100%;
                max-width: 100%;
            }

            .product-detail-info h1 {
                font-size: 2em;
            }

            .product-detail-info .product-price-detail {
                font-size: 2em;
            }

            .footer .container {
                flex-direction: column;
                align-items: center;
            }

            .footer-section {
                text-align: center;
            }

                .footer-section h4 {
                    border-bottom: none;
                    padding-bottom: 0;
                }
        }
    </style>
</head>
<body>
    <header class="navbar">
        <div class="container">
            <a href="/" class="navbar-brand">Hırdavat Dünyası</a>
            <nav>
                <ul class="navbar-nav">
                    <li><a href="/">Ana Sayfa</a></li>
                    <li><a href="/Deneme/Index">Ürünler</a></li>
                    <li><a href="#">Kampanyalar</a></li>
                    <li><a href="#">Hakkımızda</a></li>
                    <li><a href="#">İletişim</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container">
        <h2>@Model.Name Detayları</h2>

        <div class="product-detail-card">
            <div class="product-detail-image">
                <img src="@Model.ImageUrl" alt="@Model.Name">
            </div>
            <div class="product-detail-info">
                <h1>@Model.Name</h1>
                @* Category name is displayed using Model.Category?.Name.
                A null check is added in case the Category navigation property
                is not loaded or is null. *@
                <span class="category-name">Kategori: @(Model.Category != null ? Model.Category.Name : "Belirtilmemiş")</span>
                <p class="product-price-detail">@Model.UnitPrice.ToString("C2")</p>
                @* The Description field was removed as it's not in your current Product model.
                If you add it, you can include it here like: <p>@Model.Description</p> *@

                <div class="stock-info @(Model.StockQuantity > 0 ? "in-stock" : "out-of-stock")">
                    @if (Model.StockQuantity > 0)
                    {
                        <span><i class="fas fa-check-circle"></i> Stokta Var: @Model.StockQuantity adet</span>
                    }
                    else
                    {
                        <span><i class="fas fa-times-circle"></i> Stokta Yok</span>
                    }
                </div>

                <button class="add-to-cart-detail-btn">Sepete Ekle</button>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-section about-us">
                <h4>Hırdavat Dünyası</h4>
                <p>
                    Hırdavat Dünyası olarak, en kaliteli ve dayanıklı el aletlerini, yapı malzemelerini ve endüstriyel çözümleri sizlere sunuyoruz. Projelerinizi güvenle tamamlayın!
                </p>
                <div class="social-icons">
                    <a href="#" target="_blank" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" target="_blank" title="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" target="_blank" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="footer-section useful-links">
                <h4>Hızlı Erişim</h4>
                <ul>
                    <li><a href="#">Anasayfa</a></li>
                    <li><a href="/Deneme/Index">Tüm Ürünler</a></li>
                    <li><a href="#">Hesabım</a></li>
                    <li><a href="#">Sipariş Takibi</a></li>
                    <li><a href="#">Gizlilik Politikası</a></li>
                </ul>
            </div>

            <div class="footer-section contact-info-footer">
                <h4>Bilgi</h4>
                <p><i class="fas fa-map-marker-alt"></i> Örnek Mah. Deneme Cad. No:123, Bursa, Türkiye</p>
                <p><i class="fas fa-phone"></i> +90 (555) 123 45 67</p>
                <p><i class="fas fa-envelope"></i> info@hirdavatdunyasi.com</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© @DateTime.Now.Year Hırdavat Dünyası. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>