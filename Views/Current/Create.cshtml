@model SatışProject.Entities.Customer

@{
    ViewData["Title"] = "Müşteri Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4 col-md-10 mx-auto">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Yeni Müşteri Ekle</h4>
        </div>
        <div class="card-body p-4 bg-light rounded-bottom-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CompanyName" class="form-label">Şirket Adı</label>
                        <input asp-for="CompanyName" class="form-control" required />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label">Şehir</label>
                        <input asp-for="City" class="form-control" required />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label">Ülke</label>
                        <input asp-for="Country" class="form-control" required />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">Adres</label>
                        <input asp-for="Address" class="form-control" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TaxNumber" class="form-label">Vergi No</label>
                        <input asp-for="TaxNumber" class="form-control" required />
                        <span asp-validation-for="TaxNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TaxOffice" class="form-label">Vergi Dairesi</label>
                        <input asp-for="TaxOffice" class="form-control" />
                        <span asp-validation-for="TaxOffice" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label">Aktif mi?</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                        <label class="form-check-label" asp-for="IsActive">Evet</label>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-save2 me-1"></i>Kaydet
                    </button>
                    <a href="/Current/Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-1"></i>İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
