@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Şifre Değiştir</h1>

    <form asp-action="ChangePassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 font-medium"></div>

        <div class="mb-4">
            <label asp-for="CurrentPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="NewPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-6">
            <label asp-for="ConfirmNewPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-red-600 text-sm"></span>
        </div>
        <br />
        <br />
        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-success px-4 me-2">
                <i class="bi bi-save2 me-1"></i>Şifreyi Degiştir
            </button>
            <a href="/Settings/Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-x-circle me-1"></i>İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
