@model List<(SatışProject.Entities.AppUser User, IList<string> Roles)>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-users me-2"></i>Kullanıcı Listesi</h3>
        </div>
        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-6">
                    <a href="/AdminUser/Create" class="btn btn-success">
                        <i class="bi bi-person-plus-fill me-1"></i>Yeni Kullanıcı Ekle
                    </a>
                </div>
                <div class="col-md-6">
                    <input type="text" id="userSearchInput" class="form-control" placeholder="Kullanıcı ara...">
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Kullanıcı Adı</th>
                            <th>E-Posta</th>
                            <th>Durum</th>
                            <th>Roller</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td class="fw-bold">@item.User.FirstName @item.User.LastName</td>
                                <td>@item.User.UserName</td>
                                <td class="text-muted">@item.User.Email</td>
                                <td>
                                    <span class="badge @(item.User.IsActive ? "bg-success" : "bg-secondary")">
                                        @(item.User.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        @foreach (var role in item.Roles)
                                        {
                                            <span class="badge bg-info text-dark me-1 mb-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Rol Yok</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/AdminUser/Edit/@item.User.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="/AdminUser/Roles/@item.User.Id" class="btn btn-sm btn-outline-primary" title="Rol Ata">
                                            <i class="bi bi-person-gear"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@item.User.Id', '@item.User.FirstName @item.User.LastName')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" asp-action="DeleteUser" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" id="userIdInput" />
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(userId, userName) {
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                html: `<strong>${userName}</strong> adlı kullanıcıyı silmek üzeresiniz.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'İptal',
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("userIdInput").value = userId;
                    document.getElementById("deleteForm").submit();
                }
            });
        }

        document.getElementById('userSearchInput').addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#usersTable tbody tr');

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                row.style.display = rowText.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>

    @if (TempData["DeleteUserSuccess"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Başarılı',
                text: '@TempData["DeleteUserSuccess"]',
                confirmButtonColor: '#198754'
            });
        </script>
    }
    else if (TempData["DeleteUserError"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Hata',
                text: '@TempData["DeleteUserError"]',
                confirmButtonColor: '#dc3545'
            });
        </script>
    }
}
