@model SatışProject.Entities.Brand
@{
    ViewData["Title"] = "Marka Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Marka Güncelleme</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="AdminBrand" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="BrandID" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Marka Adı</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mevcut Logo</label><br />
                            @if (!string.IsNullOrEmpty(Model.LogoPath))
                            {
                                <img src="@Model.LogoPath" alt="Logo" width="120" class="img-thumbnail" />
                            }
                            else
                            {
                                <p class="text-muted">Logo bulunamadı.</p>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yeni Logo Yükle</label>
                            <input type="file" name="LogoFile" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsActive" class="form-label">Durum</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="IsActive" class="form-check-input" type="radio" value="true" checked="@Model.IsActive" />
                                    <label class="form-check-label" for="IsActive">Aktif</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="IsActive" class="form-check-input" type="radio" value="false" checked="!@Model.IsActive" />
                                    <label class="form-check-label" for="IsActive">Pasif</label>
                                </div>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-save2 me-1"></i>Kaydet
                            </button>
                            <a href="/AdminBrand/Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
