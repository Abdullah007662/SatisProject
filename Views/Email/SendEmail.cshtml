@{
    ViewData["Title"] = "E-posta Gönderme";
}

<h1>E-posta Gönderme</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="SendEmail" method="post">
    <div class="form-group">
        <label for="receiverEmail">Alıcı E-posta:</label>
        <input type="email" class="form-control" id="receiverEmail" name="receiverEmail" required>
    </div>
    <div class="form-group">
        <label for="subject">Konu:</label>
        <input type="text" class="form-control" id="subject" name="subject" required>
    </div>
    <div class="form-group">
        <label for="body">Mesaj:</label>
        <textarea class="form-control" id="body" name="body" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">E-posta Gönder</button>
</form>